{
    "name": "raffaelecarelle/php-error-insight-symfony-bundle",
    "description": "Symfony Bundle for PHP Error Insight - AI-powered error handling for Symfony applications",
    "type": "symfony-bundle",
    "license": "GPL-3.0-or-later",
    "keywords": [
        "symfony",
        "bundle",
        "error-handling",
        "ai",
        "debugging",
        "exception-handling"
    ],
    "authors": [
        {
            "name": "Raffaele Carelle",
            "email": "raffaele.carelle@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "raffaelecarelle/php-error-insight": "^1.0",
        "symfony/framework-bundle": "^6.4|^7.0",
        "symfony/runtime": "^6.4|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3",
        "rector/rector": "^1.2",
        "friendsofphp/php-cs-fixer": "^3.87",
        "symfony/phpunit-bridge": "^6.4|^7.0|^8.0",
        "symfony/browser-kit": "^6.4|^7.0|^8.0",
        "symfony/css-selector": "^6.4|^7.0|^8.0",
        "symfony/dom-crawler": "^6.4|^7.0|^8.0",
        "symfony/security-bundle": "^6.4|^7.0|^8.0",
        "ergebnis/phpunit-slow-test-detector": "^2.20",
        "phpstan/phpstan-phpunit": "^1.4",
        "phpstan/extension-installer": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "PhpErrorInsightBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpErrorInsightBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run --diff --verbose",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose",
        "rector-check": "rector --dry-run",
        "rector-fix": "rector",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html=var/coverage",
        "quality": [
            "@cs-check",
            "@rector-check",
            "@phpstan",
            "@test"
        ],
        "fix-all": [
            "@cs-fix",
            "@rector-fix"
        ]
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": false,
            "phpstan/extension-installer": true
        }
    }
}
